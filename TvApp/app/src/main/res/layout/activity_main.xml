<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:focusable="false"
    android:descendantFocusability="afterDescendants">

    <!-- ================= MAIN CONTENT ================= -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="afterDescendants">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"/>

        <!-- ================= MINI PLAYER ================= -->
        <FrameLayout
            android:id="@+id/miniPlayerContainer"
            android:layout_width="420dp"
            android:layout_height="236dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:elevation="16dp"
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:background="@drawable/mini_focus_bg"

            android:nextFocusLeft="@id/navRecycler"
            android:nextFocusUp="@id/container"
            android:nextFocusRight="@id/container"
            android:nextFocusDown="@id/container">

            <com.logituit.logixsdk.logixplayer.player.LogixPlayerView
                android:id="@+id/miniPlayerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"/>
        </FrameLayout>

    </FrameLayout>

    <!-- ================= DRAWER ================= -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#101010"
        android:paddingStart="24dp"
        android:paddingTop="60dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV App"
            android:textColor="#E50914"
            android:textSize="26sp"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="40dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/navRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>

